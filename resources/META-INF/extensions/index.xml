        <stubIndex implementation="nl.hannahsten.texifyidea.index.NewCommandsIndexEx"/>
        <stubIndex implementation="nl.hannahsten.texifyidea.index.NewSpecialCommandsIndexEx"/>
        <stubIndex implementation="nl.hannahsten.texifyidea.index.NewDefinitionIndexEx"/>
        <stubIndex implementation="nl.hannahsten.texifyidea.index.NewLabelsIndexEx"/>
        <stubIndex implementation="nl.hannahsten.texifyidea.index.NewBibtexEntryIndexEx"/>
